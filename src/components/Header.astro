---
import { Facebook, Instagram, Mail, Menu, Phone, Twitter, Youtube } from "lucide-react";
import Turso from "./icons/Turso.astro";
import Button from "./Button.astro";
const title = "Clean Life";
const links = [
    { href: "/", text: "الرئيسة" },
    { href: "/About", text: "حول" },
    { href: "/Services", text: "الخدمات" },
    { href: "/Projects", text: "المشاريع" },
    { href: "/Blog", text: "مدونة" },
    { href: "/Contact", text: "تواصل معنا" },
];

---

<header class=" w-full sticky z-[99]  bg-white top-0 left-0 flex justify-center items-center flex-col  ">
    <div class="w-full bg-primary flex justify-center items-center ">
        <section class="w-full px-4  md:max-w-[80%] py-4   flex justify-between items-center ">
            <div class="  hidden md:flex gap-x-6 justify-start items-center">
             <!-- Header Social media -->
             <div class="flex justify-center items-center gap-x-3">
                <Phone width={18} height={18} className=" text-secondary"/>
                <p
                class=" text-white"
                >
                (405) 555-0120
                </p>
             </div>

              <div class="flex justify-center items-center gap-x-3">
                <Mail width={18} height={18} className=" text-secondary"/>
                <p
                class=" text-white"
                >
                example@gmail.com
                </p>
             </div>
            </div>  

            <div class="flex gap-x-4 justify-start items-center">
                <Facebook className=" text-secondary" width={18} height={18}/>
                <Twitter className=" text-secondary" width={18} height={18}/>
                <Instagram className=" text-secondary" width={18} height={18}/>
                <Youtube className=" text-secondary" width={18} height={18}/>
            </div>
        </section>
    </div>
    <!-- Header NavBar -->
    <nav
    class="  md:max-w-[80%] px-4   flex justify-between py-5  items-center w-full  mx-auto"
    >
    <a href="/" class="text-xl flex justify-end items-end font-bold text-primary ">
        <Turso
        class:list={"w-10 h-10 text-primary"}
        />
    </a>

    <ul class="md:flex hidden gap-x-6">
        {links.map(({ href, text }) => (
            <li>
            <a
                href={href}
                class= " text-slate-700 font-medium hover:underline  transition-colors duration-300"
            >
                {text}
            </a>
            </li>
        ))}
    </ul>

    <div class="menu flex justify-center items-center gap-x-4 ">
        <Button>
            احجز مقعدك
        </Button>
      <button
      class=" rounded-lg border md:hidden border-neutral-400/35 p-1 "
      >
        <Menu
        id="menu"
        aria-label="nav-menu"
        className=" text-primary   focus:text-secondary " />
      </button>
    </div>
    </nav>
</header>

<script>
    const menu = document.getElementById("menu");
    const openSideBar = () => {
        window.dispatchEvent(new Event("side-bar-open"));
    };

    menu.addEventListener("click", openSideBar);
</script>